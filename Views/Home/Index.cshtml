@{
    ViewData["Title"] = "Home Page";
}
@{
//checking the time of day
var timeOfDayMsg = "";
@if(DateTime.Now.Hour > 12)
  {timeOfDayMsg = "Hey there, Good Evening";}
else
  {timeOfDayMsg = "Hey there, Good Morning";}


// reading message from input
var message = "";
@if(IsPost)
    {
    var firstName = Request["name"];
    message = @timeOfDayMsg +" "+ firstName;
    }
    

}

<form action="" method="post">
<p><label for="name">Please enter your name</label><br>
<input type="text" name="name" placeholder="First Name"></p>
<p><input type="submit" value="submit"></p>
</form>
<p>@message</p>

<html>
    <body>
        <div class="container">
        <p>@timeOfDayMsg</p>
        <p>This is a simple OMBD Application built using C# Razor, JQuery and JS.</p>
        <form>
		<input type="text" />
		<button>Search</button>

        <div class="results"></div>
	    </form>	
        </div>
    </body>
</html> 
